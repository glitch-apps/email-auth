extends layout

block content
  form.form-signin(method="post" action="/login")
    img.mb-4(src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72")
    h1.h3.mb-3.font-weight-normal Log In to
      |
      |
      strong EmailAuth
    label.sr-only(for="inputEmail") Email address
    input#inputEmail.form-control(type="email" placeholder="Email address" required autofocus)
    button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
